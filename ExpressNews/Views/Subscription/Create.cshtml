@model ExpressNews.Models.Database.SubscriptionType

@{
    ViewData["Title"] = "Create";
}



<h4>Subscription Type - Add</h4>
<hr />
<div class="row">
    <div class="col-md-8 offset-md-2 col-lg-6 offset-lg-3">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="TypeName" class="control-label mb-2 fw-bolder fst-italic"></label>
                <input asp-for="TypeName" class="form-control" />
                <span asp-validation-for="TypeName" class="text-danger"></span>
            </div>
            <script src="
                https://cdn.ckeditor.com/ckeditor5/41.4.2/classic/ckeditor.js"></script>
            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label mb-2 fw-bold fst-italic"></label>
                <textarea asp-for="Description" id="editor" class="form-control" rows="10" placeholder="Enter full content"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <script>
                ClassicEditor
                    .create(document.querySelector('#editor'))
                    .then(editor => {
                        console.log(editor);
                    })
                    .catch(error => {
                        console.error(error);
                    });
            </script>
            <div class="form-group mb-3">
                <label asp-for="Price" class="control-label mb-2 fw-bolder fst-italic"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="d-grid gap-2 mb-3">
                <input type="submit" value="Save" class="btn btn-success align-content-md-center mx-2" />
            </div>
            
        </form>
    </div>
</div>

