@model ExpressNews.Models.Database.Article

@{
    ViewData["Title"] = "Add Article";
}

<h1>Add New Article</h1>

<hr />
<div class="row border-top-0">
    <div class="col-md-8 offset-md-2 col-lg-6 offset-lg-3">
        <form asp-action="ArticleAdd" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Link Text -->
            <div class="form-group mb-3">
                <label asp-for="LinkText" class="control-label mb-2 fw-bold fst-italic"></label>
                <input asp-for="LinkText" class="form-control" placeholder="Enter link text" />
                <span asp-validation-for="LinkText" class="text-danger"></span>
            </div>

            <!-- Headline -->
            <div class="form-group mb-3">
                <label asp-for="HeadLine" class="control-label mb-2 fw-bold fst-italic"></label>
                <input asp-for="HeadLine" class="form-control" placeholder="Enter headline" />
                <span asp-validation-for="HeadLine" class="text-danger"></span>
            </div>

            <!-- Content Summary -->
            <div class="form-group mb-3">
                <label asp-for="ContentSummary" class="control-label mb-2 fw-bold fst-italic"></label>
                <textarea asp-for="ContentSummary" class="form-control" rows="3" placeholder="Enter content summary"></textarea>
                <span asp-validation-for="ContentSummary" class="text-danger"></span>
            </div>

        <!-- Content -->
            <!-- Include Content -->
            <script src="https://cdn.ckeditor.com/ckeditor5/41.4.2/classic/ckeditor.js"></script>
            <div class="form-group mb-3">
                <label asp-for="Content" class="control-label mb-2 fw-bold fst-italic"></label>
                <textarea asp-for="Content" id="editor" class="form-control" rows="10" placeholder="Enter full content"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>  
            <script>
                ClassicEditor
                    .create(document.querySelector('#editor'))
                    .then(editor => {
                        console.log(editor);
                    })
                    .catch(error => {
                        console.error(error);
                    });
            </script>

            <!-- Categories -->
            <div class="form-group mb-3">
                <label asp-for="Category1" class="control-label mb-2 fw-bold fst-italic"></label>
                <select asp-for="Category1" class="form-control">
                    <option value="Local">Local</option>
                    <option value="World">World</option>
                    <option value="Sport">Sport</option>
                    <option value="Culture">Culture</option>
                </select>
                <span asp-validation-for="Category1" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Category2" class="control-label mb-2 fw-bold fst-italic"></label>
                <select asp-for="Category2" class="form-control">
                    <option value="N/A">N/A</option>
                    <option value="Local">Local</option>
                    <option value="World">World</option>
                    <option value="Sport">Sport</option>
                    <option value="Culture">Culture</option>
                </select>
                <span asp-validation-for="Category2" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Category3" class="control-label mb-2 fw-bold fst-italic"></label>
                <select asp-for="Category3" class="form-control">
                    <option value="N/A">N/A</option>
                    <option value="Local">Local</option>
                    <option value="World">World</option>
                    <option value="Sport">Sport</option>
                    <option value="Culture">Culture</option>
                </select>
                <span asp-validation-for="Category3" class="text-danger"></span>
            </div>

            <!-- Image Upload -->
            <div class="form-group mb-3">
                <label class="control-label mb-2 fw-bold fst-italic">Select Image File:</label>
                <input asp-for="FormImages" class="form-control-file" type="file" multiple />
                <span asp-validation-for="FormImages" class="text-danger"></span>
            </div>

            <!-- Additional Options -->
            <div class="form-group form-check mb-3">
                <input class="form-check-input" asp-for="IsBreaking" />
                <label class="form-check-label fw-bold fst-italic" asp-for="IsBreaking">Breaking News</label>
            </div>

            <div class="form-group form-check mb-3">
                <input class="form-check-input" asp-for="IsSubsription" />
                <label class="form-check-label fw-bold fst-italic" asp-for="IsSubsription">Subscription Required</label>
            </div>

            <!-- Submit Button -->
            <div class="form-group mb-3">
                
            </div>
            <div class="d-grid gap-2 mb-3">
                <input type="submit" value="Save" class="btn btn-success align-content-md-center mx-2" />   
            </div>
        </form>
        <a class="btn btn-outline-dark mx-2" asp-action="Index">Back To The Article List</a>

    </div>
</div>

