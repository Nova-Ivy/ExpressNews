@model ExpressNews.Models.Database.NewsLetter

@{
    ViewData["Title"] = "Create";
}
  
    <div class="row p-3">

   
    <div class="col-md-3"></div>
        <div class="col-md-6 round3 bg-light">

        <h1 class="p-3 fw-bold text-center text-danger  ">Create Newsletter</h1>
       
        <hr />


            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group p-3 fw-bold">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            <div class="form-group p-3 fw-bold">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            <div class="form-group p-3 fw-bold">
                    <label asp-for="EmailAddress" class="control-label"></label>
                    <input asp-for="EmailAddress" class="form-control" />
                    <span asp-validation-for="EmailAddress" class="text-danger"></span>
                </div>
            <div class="form-group p-3 fw-bold">
                    <label asp-for="Category1" class="control-label"></label>
                   
                <select asp-for="Category1" class="form-control">
                    <option value="N/A">N/A</option>
                    <option value="Local">Local</option>
                    <option value="World">World</option>
                    <option value="Sport">Sport</option>
                    <option value="Culture">Culture</option>
                </select>
                <span asp-validation-for="Category1" class="text-danger"></span>@* 
                    <span asp-validation-for="Category1" class="text-danger"></span> *@
                </div>
            <div class="form-group p-3 fw-bold">
                    <label asp-for="Category2" class="control-label"></label>
                <select asp-for="Category2" class="form-control">
                    <option value="N/A">N/A</option>
                    <option value="Local">Local</option>
                    <option value="World">World</option>
                    <option value="Sport">Sport</option>
                    <option value="Culture">Culture</option>
                </select>
                    <span asp-validation-for="Category2" class="text-danger"></span>
                </div>
            <div class="form-group p-3 fw-bold">
                    <label asp-for="Category3" class="control-label"></label>
                <select asp-for="Category3" class="form-control">
                    <option value="N/A">N/A</option>
                    <option value="Local">Local</option>
                    <option value="World">World</option>
                    <option value="Sport">Sport</option>
                    <option value="Culture">Culture</option>
                </select>
                    <span asp-validation-for="Category3" class="text-danger"></span>
                </div>
            <div class="form-group p-3 fw-bold">
                    <label asp-for="Category4" class="control-label"></label>
                <select asp-for="Category4" class="form-control">
                    <option value="N/A">N/A</option>
                    <option value="Local">Local</option>
                    <option value="World">World</option>
                    <option value="Sport">Sport</option>
                    <option value="Culture">Culture</option>
                </select>
                    <span asp-validation-for="Category4" class="text-danger"></span>
                </div>
            <div class="form-group p-3 fw-bold">
                    <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control">
                    <option value="Active">Active</option>
                    <option value="InActive">InActive</option>
                   
                </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
                <div class="form-group p-3 form-check">
                    <label class="form-check-label p-3">
                        <input class="form-check-input" asp-for="IsTermsAndConditions" />  @Html.DisplayNameFor(model => model.IsTermsAndConditions) 
                    </label>
                </div>
            <div class="form-group p-3 fw-bold">
                    <label asp-for="Created" class="control-label"></label>
                    <input asp-for="Created" class="form-control" />
                    <span asp-validation-for="Created" class="text-danger"></span>
                </div>
            <div class="form-group p-3 fw-bold">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>









