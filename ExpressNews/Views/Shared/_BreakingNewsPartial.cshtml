@model IEnumerable<ExpressNews.Models.Database.Article>


    @foreach (var row in Model)
    {
     @if (row.IsBreaking)
        {
        <div class="w-100 p-3 border bg-white">
            <a href="#">
                <h3 id="#" onclick="readMore(@Html.DisplayFor(item => row.Id))" style="color:black">
                    <strong style="color:red">JUST NOW: </strong>@Html.DisplayFor(item => row.HeadLine)
                </h3>
            </a>
        </div>
        <br />
        }
    
  

    }
