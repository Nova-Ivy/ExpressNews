@model IEnumerable<ExpressNews.Models.Database.Tip>

@{
    ViewData["Title"] = "Index";
}
@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration

@{
    var lgImageUrl = Configuration.GetValue<string>("LGImage");
    var smImageUrl = Configuration.GetValue<string>("SMImage");
}


@* <p>
    <a asp-action="Create">Create New</a>
</p> *@


 

<div class="container">
     
    <div class="row p-3 ">
        <div class="col-6">
            <h2>Tips from user :</h2>
        </div>
        <div class="col-6">
            <h3><a id="profile" href="/Identity/Account/Manage" class="btn btn-outline-dark fw-bold  float-end">Back to Profile </a></h3>
        </div>
    </div>
     

    <div class="row gy-4">
        @* card-deck *@
        @foreach (var item in Model)
        {
            <div class="row card m-3  h-100">
                <div class="row">
                    <div class="col-md-3">
                        @* @Html.DisplayNameFor(model => model.ImageName)  *@  <img src="@lgImageUrl@Html.DisplayFor(modelItem => item.ImageName)" class="p-3" width="70%" height="auto"/><br />
                    </div>

                    <div style="font-size:large"class="col-md-7 card-bod h-100 p-3">
                        <p class="fw-normal m-1 text-danger"><strong>@Html.DisplayNameFor(model => model.Created)</strong>: @Html.DisplayFor(modelItem => item.Created) </p>    <br />
                        <p class="m-1"><strong>@Html.DisplayNameFor(model => model.Subject)  &nbsp; </strong>: @Html.DisplayFor(modelItem => item.Subject)<br /></p>

                        <p class="m-1"><strong> @Html.DisplayNameFor(model => model.Name)  &nbsp; </strong>: @Html.DisplayFor(modelItem => item.Name)<br /> </p>
                        <p class="m-1"><strong> @Html.DisplayNameFor(model => model.Email) &nbsp; </strong>: @Html.DisplayFor(modelItem => item.Email)<br /> </p>
                        <p class="m-1"><strong> @Html.DisplayNameFor(model => model.TelephoneNumber)</strong> : @Html.DisplayFor(modelItem => item.TelephoneNumber)<br /></p>
                             
                    </div>

                    <div class="col-md-2 p-3 ">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning col-12 mb-2 edit-btn">Edit</a> 
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info col-12 mb-2 details-btn">Details</a>
                    </div>

                </div>
            </div>

            
        }
    </div>
</div>
