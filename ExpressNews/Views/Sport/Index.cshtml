@model IEnumerable<ExpressNews.Models.Database.Article>


@{
    // var First3News = Model.Take(3);
    int i = 1;
}
<div class="container">

    <div class="row">
        <div class="col-md-8 p-3">
            <div id="carouselExample" class="carousel slide">
                <div class="carousel-inner">

                    @foreach (var row in Model.Take(3))
                    {
                        @if (i == 1)
                        {
                            <div class="carousel-item active">
                                
                                <img src="@row.ImageLink" class="d-block w-90" style="height:400px"  width="100%" height="100%" alt="...">
                                <div class="carousel-caption d-none d-md-block">
                                    <h4 id="#" class="alert-info" onclick="readMore(@Html.DisplayFor(item => row.Id))" style="cursor:pointer">@row.HeadLine</h4>
                                    @* <p>@row.ContentSummary</p> *@
                                </div> 
                            </div>
                            i++;
                        }
                        else if (i == 2)
                        {
                            <div class="carousel-item">
                                
                                <img src="@row.ImageLink" class="d-block w-90" style="height:400px" width="100%" height="100%" alt="...">
                                <div class="carousel-caption d-none d-md-block">
                                    <h4 id="#" class=" alert-secondary" onclick="readMore(@Html.DisplayFor(item => row.Id))" style="cursor:pointer">@row.HeadLine</h4>
                                    @* <p>@row.ContentSummary</p> *@
                                </div>
                            </div>
                            i++;
                        }else if(i==3){
                            <div class="carousel-item">
                               
                                <img src="@row.ImageLink" class="d-block w-90" style="height:400px" width="100%" height="100%" alt="...">
                                <div class="carousel-caption d-none d-md-block">
                                    <h4 id="#" class=" alert-danger" onclick="readMore(@Html.DisplayFor(item => row.Id))" style="cursor:pointer">@row.HeadLine</h4>
                                    @* <p>@row.ContentSummary</p> *@
                                </div>
                            </div>
                            i++;
                        }

                    }

                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
      
        <div class="col-md-4  p-3" >
            @foreach (var row in Model.Skip(3).Take(1))
            {
                <div class="column" style="border-block-color" class="p-3">
                        <img src="@row.ImageLink" style="width:100%; height:100% alt="Sports Image 3">

                    <h4 id="#" onclick="readMore(@Html.DisplayFor(item => row.Id))" style="color:black;cursor:pointer">@row.HeadLine</h4>
                        <p>@row.ContentSummary</p>
                </div>
            }
        </div>
      
    </div>
    <br />
   

    <div class="row">
        <div class="col-md-4">
