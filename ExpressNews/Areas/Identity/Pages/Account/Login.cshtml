@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<body class="bg bg-ligh align-content-center">

    
    <div class="row">
        <div class="col-md-4 bg-warning p-2">
            <section>
                <h1 class=" p-2">@ViewData["Title"]</h1>
                <div>
                    <a id="admin" onclick="GetUNandPw(event, this)" href="javascript:void(0);" style="color:black" role="button">Admin |</a>
                    <a id="editor" onclick="GetUNandPw(event, this)" href="javascript:void(0);" style="color:black" role="button"> Editor |</a>
                    <a id="writer" onclick="GetUNandPw(event, this)" href="javascript:void(0);" style="color:black" role="button"> Journalist |</a>
                    <a id="memsub" onclick="GetUNandPw(event, this)" href="javascript:void(0);" style="color:black" role="button"> Member With Sub |</a>
                    <a id="memnosub" onclick="GetUNandPw(event, this)" href="javascript:void(0);" style="color:black" role="button"> Member Without Sub</a>
                </div>
                
                <form id="account" method="post">

                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3 p-2">
                        <input asp-for="Input.Email" id="idEmail" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3 p-2">
                        <input asp-for="Input.Password" id="idPassword" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="form-label">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="checkbox mb-3 p-2">
                        <label asp-for="Input.RememberMe" class="form-label p-2">
                            <input class="form-check-input p-2" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <div class="text-center p-2">
                        <button id="login-submit" type="submit" class="w-75 btn btn-lg btn-primary p-2">Log in</button>
                    </div>
                    <div class="text-center p-2">
                        <p >
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                        <p>
                            <a class="w-75 btn btn-lg btn-primary p-2" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </p>

                    </div>
                </form>
            </section>
            
        </div>
        <div class="col-md-8 col-md-offset-2">
            <div>
                <img src="~/image/en news.png" width="100%" />
            </div>
           
        </div>
    </div>
</body>
