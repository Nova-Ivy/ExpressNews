@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<body class="bg bg-ligh align-content-center">

    
    <div class="row">
        <div class="col-md-4 bg-warning p-2">
            <section>
                <h1 class=" p-2">@ViewData["Title"]</h1>
                <form id="account" method="post">

                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3 p-2">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3 p-2">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="form-label">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="checkbox mb-3 p-2">
                        <label asp-for="Input.RememberMe" class="form-label p-2">
                            <input class="form-check-input p-2" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary p-2">Log in</button>
                    </div>
                    <div>
                        <p class="text-center p-2">
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                        <p>
                            <button class="w-100 btn btn-lg btn-primary p-2" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</button>
                        </p>

                    </div>
                </form>
            </section>
        </div>
        <div class="col-md-8 col-md-offset-2">
            <div>
                <img src="~/image/en news.png" width="100%" />
            </div>
           
        </div>
    </div>
</body>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
