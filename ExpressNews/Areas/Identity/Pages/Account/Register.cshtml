@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
@using Microsoft.AspNetCore.Http
@inject Microsoft​.AspNetCore​.Http.IHttpContextAccessor HttpContextAccessor

@{
    var session = HttpContextAccessor.HttpContext.Session;
}
<body>
    @if (session.GetString("Role") == "Admin")
    {
        <div class="row">
            <div class="col-6">
                <h2></h2>
            </div>
            <div class="col-6">
                <h3><a id="profile" href="/Identity/Account/Manage" class="btn btn-outline-dark fw-bold  float-end">Back to Profile </a></h3>
            </div>
        </div>
        <hr />
    }
        <div class="col-md-4 p-2 yl m-auto">
        <h1 class="text-center p-3 fw-bolder" style="color:black">REGISTRATION</h1>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3 p-2">
                    <input asp-for="Input.FirstName" class="form-control" aria-required="true" placeholder="Text" />
                    <label asp-for="Input.FirstName">First Name</label>
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
               <div class="form-floating mb-3 p-2">
                <input asp-for="Input.LastName" class="form-control" aria-required="true" placeholder="Text" />
                <label asp-for="Input.LastName">Last Name</label>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3 p-2">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3 p-2">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3 p-2">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="text-center p-4">
                <p>
                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary p-2 fw-bold">REGISTER</button>
                </p>
                </div>
               
            </form>
        </div>

        
</body>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
